n1 = float(input("Enter First Number: "))
n2 = float(input("Enter Second Number: "))
op = input("Enter an operator ( +, -, *, /): ")


if op == "+":
    res = n1 + n2
    print(round(res, 3))
elif op == "-":
    res = n1 - n2
    print(round(res, 3))
elif op == "*":
    res = n1 * n2
    print(round(res, 3))
elif op == "/":
    res = n1 / n2
    print(round(res, 3))
else:
    print("{op} is not a valid operator! Please Try Again")
